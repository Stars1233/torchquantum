[flake8]
select = B,C,E,F,N,P,T4,W,B9
max-line-length = 120
ignore =
    E203,E305,E402,E501,E721,E741,F405,F821,F841,F999,W503,W504,C408,E302,W291,E303,N812,N817,E731
    EXE001,
    B007,B008,
optional-ascii-coding = True
exclude =
    ./.git,
    ./docs
    ./build
    ./scripts,
    ./venv,
    *.pyi
    .pre-commit-config.yaml
    *.md
    .flake8
